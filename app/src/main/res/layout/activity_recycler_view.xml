<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    android:orientation="vertical"
    tools:context="com.example.majid_fit5.noteapp.RecyclerView">

    <android.support.v7.widget.RecyclerView

        android:id="@+id/myRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

    </android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/noNoteImage"
            android:layout_width="match_parent"
            android:layout_height="260dp"
            app:srcCompat="@drawable/no_note_found"
            android:visibility="invisible"
            />


        <TextView
            android:id="@+id/noNoteComment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No notes created yet!"
            android:textSize="25sp"
            android:fontFamily="serif"
            android:textAlignment="center"
            android:visibility="invisible"
            />
        <TextView
            android:id="@+id/noResultComment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No result found"
            android:textSize="25sp"
            android:fontFamily="serif"
            android:textAlignment="center"
            android:visibility="invisible"
            />


    </LinearLayout>

</LinearLayout>
